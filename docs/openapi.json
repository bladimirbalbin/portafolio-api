{
  "openapi": "3.0.3",
  "info": {
    "title": "Portafolio API",
    "version": "1.1.0",
    "description": "API REST para gestionar proyectos de portafolio. Endpoints p√∫blicos: health y lectura. Endpoints protegidos: escritura con JWT."
  },
  "servers": [
    { "url": "https://portafolio-api-xiw6.onrender.com" },
    { "url": "http://localhost:8081" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "required": ["username", "password"],
        "properties": {
          "username": { "type": "string", "example": "admin" },
          "password": { "type": "string", "example": "1234" }
        }
      },
      "LoginResponse": {
        "type": "object",
        "required": ["token"],
        "properties": {
          "token": { "type": "string", "description": "JWT token" }
        }
      },
      "Project": {
        "type": "object",
        "required": ["id", "slug", "name", "description", "tags", "featured", "created_at", "updated_at"],
        "properties": {
          "id": { "type": "integer", "format": "int64" },
          "slug": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "repo_url": { "type": "string", "nullable": true },
          "demo_url": { "type": "string", "nullable": true },
          "tags": { "type": "array", "items": { "type": "string" } },
          "featured": { "type": "boolean" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "ProjectUpsert": {
        "type": "object",
        "required": ["slug", "name", "description", "tags", "featured"],
        "properties": {
          "slug": { "type": "string", "example": "cv-api" },
          "name": { "type": "string", "example": "CV API (Rails)" },
          "description": { "type": "string", "example": "API RESTful en Rails con Swagger y JWT" },
          "repo_url": { "type": "string", "nullable": true, "example": "https://github.com/bladimirbalbin/cv_api" },
          "demo_url": { "type": "string", "nullable": true, "example": "https://cv-api-xpe1.onrender.com/api-docs/index.html" },
          "tags": { "type": "array", "items": { "type": "string" }, "example": ["ruby", "rails", "jwt"] },
          "featured": { "type": "boolean", "example": true }
        }
      }
    }
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login (returns JWT)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/LoginRequest" } }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/LoginResponse" } }
            }
          },
          "401": { "description": "Invalid credentials" }
        }
      }
    },
    "/projects": {
      "get": {
        "summary": "List projects",
        "parameters": [
          { "name": "featured", "in": "query", "schema": { "type": "boolean" } },
          { "name": "tag", "in": "query", "schema": { "type": "string" } },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "minimum": 1, "maximum": 100 } },
          { "name": "offset", "in": "query", "schema": { "type": "integer", "minimum": 0 } },
          { "name": "sort", "in": "query", "schema": { "type": "string", "enum": ["featured", "recent"] } }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Project" } }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create project (JWT required)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/ProjectUpsert" } }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/Project" } }
            }
          },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/projects/{slug}": {
      "get": {
        "summary": "Get project by slug",
        "parameters": [
          { "name": "slug", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/Project" } }
            }
          },
          "404": { "description": "Not found" }
        }
      },
      "put": {
        "summary": "Update project (JWT required)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "slug", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/ProjectUpsert" } }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/Project" } }
            }
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Not found" }
        }
      },
      "delete": {
        "summary": "Delete project (JWT required)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "slug", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Not found" }
        }
      }
    }
  }
}
